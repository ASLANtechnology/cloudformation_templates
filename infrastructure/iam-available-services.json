{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "AvailableServicesStatement",
            "Effect": "Allow",
            "Action": [
                "budgets:*",
                "cloud9:*",
                "cloudformation:*",
                "cloudtrail:*",
                "cloudwatch:*",
                "codebuild:*",
                "codecommit:*",
                "codepipeline:*",
                "codestar:*",
                "config:*",
                "dynamodb:*",
                "ecr:*",
                "ec2:*",
                "elasticache:*",
                "elasticbeanstalk:*",
                "eks:*",
                "es:*",
                "guardduty:*",
                "kms:*",
                "lambda:*",
                "macie:*",
                "opsworks:*",
                "quicksight:*",
                "rds:*",
                "route53:*",
                "secretsmanager:*",
                "servicecatalog:*",
                "sns:*",
                "s3:*",
                "ssm:*",
                "support:*",
                "workspaces:*"
            ],
            "Resource": "*",
            "Condition": {
                "StringEquals": {
                    "aws:RequestedRegion": [
                        "us-west-1",
                        "us-west-2",
                        "us-east-1",
                        "us-east-2"
                    ]
                }
            }
        }
    ]
}